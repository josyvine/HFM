<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Thumbnail Image -->
        <ImageView
            android:id="@+id/thumbnail_image_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#CCCCCC"
            android:contentDescription="File thumbnail" />

        <!-- Selection Checkbox -->
        <CheckBox
            android:id="@+id/selection_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="4dp"
            android:buttonTint="@android:color/white"/>

        <!-- Blue Overlay for Selected Items -->
        <View
            android:id="@+id/selection_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6633B5E5"
            android:visibility="gone" />

        <!-- Filename at the bottom -->
        <TextView
            android:id="@+id/file_name_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#80000000"
            android:ellipsize="middle"
            android:gravity="center"
            android:maxLines="1"
            android:padding="4dp"
            android:text="filename.jpg"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

    </FrameLayout>

</androidx.cardview.widget.CardView>

