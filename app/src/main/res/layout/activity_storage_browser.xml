<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/top_bar_storage_browser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorPrimary"
        android:elevation="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageButton
            android:id="@+id/back_button_storage_browser"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@android:drawable/ic_menu_revert" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/sort_button_storage_browser"
            android:layout_toEndOf="@id/back_button_storage_browser"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_storage_browser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Storage Name"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/path_storage_browser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="start"
                android:maxLines="1"
                android:text="/path/to/current/folder"
                android:textColor="#BDBDBD"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/sort_button_storage_browser"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Sort"
            android:src="@android:drawable/ic_menu_sort_by_size" />

    </RelativeLayout>

    <!-- Results Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/file_grid_storage_browser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer_bar_storage_browser"
        android:layout_below="@+id/top_bar_storage_browser"
        android:padding="4dp" />

    <!-- Loading Overlay -->
    <RelativeLayout
        android:id="@+id/loading_view_browser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar_storage_browser"
        android:background="#80FFFFFF"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <!-- Footer with Controls -->
    <RelativeLayout
        android:id="@+id/footer_bar_storage_browser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F5F5F5"
        android:padding="8dp"
        android:elevation="4dp">

        <!-- FILE OPERATION PROGRESS UI (Initially Hidden) -->
        <RelativeLayout
            android:id="@+id/operation_progress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/operation_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/operation_progress_text"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/operation_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:text="Working..." />
        </RelativeLayout>

        <!-- Main Footer Controls (Normal Mode) -->
        <RelativeLayout
            android:id="@+id/footer_controls_browser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/operation_progress_layout">

            <EditText
                android:id="@+id/search_input_storage_browser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/delete_button_storage_browser"
                android:layout_marginEnd="8dp"
                android:background="@drawable/search_input_background"
                android:hint="Search in this folder..."
                android:inputType="text"
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/delete_button_storage_browser"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="File Operations"
                android:src="@android:drawable/ic_menu_delete" />

        </RelativeLayout>

        <!-- Paste Controls (Paste Mode) -->
        <RelativeLayout
            android:id="@+id/paste_controls_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/operation_progress_layout"
            android:visibility="gone">

            <Button
                android:id="@+id/cancel_paste_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Cancel" />

            <Button
                android:id="@+id/paste_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Paste Here" />

            <Button
                android:id="@+id/create_folder_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="New Folder" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
