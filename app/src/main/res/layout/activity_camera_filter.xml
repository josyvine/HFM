<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"> 

    <!-- This is the view that will display the camera feed rendered by the GPU -->
    <android.opengl.GLSurfaceView
        android:id="@+id/camera_gl_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- This LinearLayout acts as a container for all UI controls, overlaying the GLSurfaceView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header controls -->
        <LinearLayout
            android:id="@+id/header_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#40000000"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/spinner_camera_method"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

            <ImageButton
                android:id="@+id/btn_camera_close"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Close"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- ksize parameter controls -->
        <LinearLayout
            android:id="@+id/ksize_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#A01C1C2E"
            android:padding="16dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pencil Style (ksize)"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"/>

            <SeekBar
                android:id="@+id/slider_camera_ksize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"/>
        </LinearLayout>

        <!-- Spacer to push the footer to the bottom -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Footer controls -->
        <LinearLayout
            android:id="@+id/footer_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#40000000"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_flip_camera"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/ic_flip_camera"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Flip Camera" />

            <ImageButton
                android:id="@+id/btn_capture"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_capture"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:contentDescription="Capture" />
            
            <!-- Placeholder for video recording button as per instructions -->
            <ImageButton
                android:id="@+id/btn_record_video"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/ic_videocam"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Record Video" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
