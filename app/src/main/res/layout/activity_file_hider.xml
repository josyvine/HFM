<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top Bar with Title and Close Button -->
    <RelativeLayout
        android:id="@+id/top_bar_hider"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?android:attr/colorPrimary"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="Secure File Hider"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/close_button_hider"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />
    </RelativeLayout>

    <!-- Loading/Scanning View -->
    <LinearLayout
        android:id="@+id/loading_view_hider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/scan_status_text_hider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Analyzing storage..."
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Results View -->
    <RelativeLayout
        android:id="@+id/results_view_hider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar_hider"
        android:visibility="gone">

        <!-- Search and Filter Header -->
        <RelativeLayout
            android:id="@+id/header_controls_hider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:elevation="2dp">

            <ImageButton
                android:id="@+id/filter_button_hider"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Filter by file type"
                android:src="@android:drawable/ic_menu_sort_by_size" />

            <AutoCompleteTextView
                android:id="@+id/search_input_hider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/filter_button_hider"
                android:layout_marginStart="8dp"
                android:background="@drawable/search_input_background"
                android:hint="Search files or folders..."
                android:inputType="text"
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="14sp" />
        </RelativeLayout>

        <!-- Results Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hider_results_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footer_bar_hider"
            android:layout_below="@+id/header_controls_hider"
            android:padding="4dp" />

        <!-- Footer with Controls -->
        <RelativeLayout
            android:id="@+id/footer_bar_hider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:elevation="4dp">

            <Button
                android:id="@+id/select_all_button_hider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Select All" />

            <TextView
                android:id="@+id/selection_count_text_hider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0 files selected"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/hide_button_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/colorPrimary"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="Hide"
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>

