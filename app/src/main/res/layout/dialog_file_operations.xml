<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Operations"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/button_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_compress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compress"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Move"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hide"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_delete_permanently"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Permanently"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_move_to_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Move to Recycle Bin"/>

</LinearLayout>
