<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Backup Data"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="If you cannot get a live match, paste your saved Ritual Backup Data below. It will look like a series of long numbers."
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_text_backup_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_input_background"
        android:gravity="top"
        android:hint="Paste backup data here..."
        android:inputType="textMultiLine"
        android:minLines="3"
        android:padding="12dp"
        android:textSize="14sp" />

</LinearLayout>

