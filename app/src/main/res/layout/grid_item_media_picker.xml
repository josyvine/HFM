<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <!-- Thumbnail Image for the media file -->
        <ImageView
            android:id="@+id/thumbnail_image_media"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#CCCCCC"
            android:contentDescription="File thumbnail" />

        <!-- Checkbox for selection -->
        <CheckBox
            android:id="@+id/selection_checkbox_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="4dp"
            android:buttonTint="@android:color/white"/>

        <!-- Blue Overlay to visually indicate selection -->
        <View
            android:id="@+id/selection_overlay_media"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6633B5E5"
            android:visibility="gone" />

        <!-- Filename at the bottom of the thumbnail -->
        <TextView
            android:id="@+id/file_name_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#80000000"
            android:ellipsize="middle"
            android:gravity="center"
            android:maxLines="1"
            android:padding="4dp"
            android:text="filename.mp4"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

    </FrameLayout>

</androidx.cardview.widget.CardView>

