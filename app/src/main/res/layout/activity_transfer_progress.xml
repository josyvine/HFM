<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appBackgroundColor"
    android:padding="24dp">

    <!-- Top Toolbar - UNCHANGED from your original file -->
    <RelativeLayout
        android:id="@+id/toolbar_transfer_progress"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="?attr/appPrimaryColor"
        android:elevation="4dp">

        <TextView
            android:id="@+id/transfer_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:text="File Transfer in Progress"
            android:textColor="?attr/appHeaderTextColor"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Main Content (Single File View) - This will be for the RECEIVER -->
    <LinearLayout
        android:id="@+id/single_file_progress_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/file_name_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="Waiting for transfer..."
            android:textColor="?attr/appTextColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:max="100" />

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="0.0 / 0.0 MB"
            android:textColor="?attr/appTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/speed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="0.0 MB/s"
            android:textColor="?attr/appTextColor"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Main Content (Multi File Queue) - This will be for the SENDER -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/queue_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_controls"
        android:layout_below="@id/toolbar_transfer_progress"
        android:visibility="gone"
        tools:listitem="@layout/list_item_transfer_queue"
        tools:visibility="visible" />


    <!-- Bottom Controls - UNCHANGED from your original file, but given an ID -->
    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_pause_resume"
            style="@style/AppButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Pause" />

        <Button
            android:id="@+id/button_cancel"
            style="@style/AppButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Cancel" />
    </LinearLayout>

</RelativeLayout>

