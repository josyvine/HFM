<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_title_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Folder Operations"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/button_copy_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_move_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Move"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_hide_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hide"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_delete_permanently_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Permanently"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button_move_to_recycle_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Move to Recycle Bin"/>

</LinearLayout>
