<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C2E"
    tools:context=".ProcessingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Initializing..."
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_manage"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Settings"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Close"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="8dp"
                android:indeterminate="true" />

            <LinearLayout
                android:id="@+id/analysis_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_below="@id/progress_bar"
                android:padding="8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Method:"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp"/>

                    <Spinner
                        android:id="@+id/spinner_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/btn_dropdown"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fps_controls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frame Rate:"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp"/>

                    <Spinner
                        android:id="@+id/spinner_fps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/btn_dropdown"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>

                <!-- THIS IS THE NEW CONTROL FOR IMAGES -->
                <LinearLayout
                    android:id="@+id/image_mode_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automatic Scan:"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp"/>

                    <Switch
                        android:id="@+id/switch_automatic_scan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>
                </LinearLayout>

                <!-- THIS IS THE EXISTING CONTROL FOR VIDEOS -->
                <LinearLayout
                    android:id="@+id/analysis_mode_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="16dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Standard Auto"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="Live Preview"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_apply_to_video_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Apply to Video"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"/>
                    </RelativeLayout>

                    <SeekBar
                        android:id="@+id/slider_analysis_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="2" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_analyze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analyze"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/save_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/analysis_controls"
                android:gravity="center_horizontal"
                android:paddingTop="8dp">

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fine_tuning_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/save_button_container"
                android:padding="16dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analysis Depth"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"/>

                <SeekBar
                    android:id="@+id/slider_depth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Line Sharpness"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"/>

                <SeekBar
                    android:id="@+id/slider_sharpness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100" />

                <LinearLayout
                    android:id="@+id/ksize_controls_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pencil Style (ksize)"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="4dp"/>

                    <SeekBar
                        android:id="@+id/slider_ksize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/display_container"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@+id/fine_tuning_controls"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/iv_main_display"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Main processing display"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/iv_overlay_display"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Live analysis overlay"
                    android:scaleType="fitCenter" />

                <LinearLayout
                    android:id="@+id/scan_status_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#A0000000"
                    android:padding="16dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tv_scan_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        tools:text="Scanning Pass 1 of 5..." />

                    <ProgressBar
                        android:id="@+id/scan_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:max="5"
                        tools:progress="1"/>
                </LinearLayout>
            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_film_strip"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/display_container"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:orientation="horizontal"
                tools:visibility="visible"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
