<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The Map View from osmdroid library -->
    <org.osmdroid.views.MapView
        android:id="@+id/map_view_fallback"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Static Pin/Crosshair in the center of the screen -->
    <ImageView
        android:id="@+id/center_pin_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:src="@android:drawable/ic_menu_mylocation"
        android:contentDescription="Map Center Pin"/>

    <!-- Instruction Text at the top -->
    <TextView
        android:id="@+id/instructions_text_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="#A6000000"
        android:gravity="center"
        android:padding="12dp"
        android:text="Move the map to place the pin on your secret location."
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Save Button at the bottom -->
    <Button
        android:id="@+id/save_location_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="?android:attr/colorPrimary"
        android:text="Save Secret Location"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>


